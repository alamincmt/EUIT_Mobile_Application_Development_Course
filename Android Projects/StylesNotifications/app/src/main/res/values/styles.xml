<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorRed</item>
<!--        <item name="android:windowBackground">@android:color/holo_green_light</item>-->
    </style>

    <style name="TextViewHeaderStyle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">#009688</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextViewCaptionStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#009688</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
